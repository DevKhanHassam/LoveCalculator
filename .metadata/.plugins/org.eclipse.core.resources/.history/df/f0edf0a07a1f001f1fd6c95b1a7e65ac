package com.lc.Configuration;

import java.util.Properties;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.mail.javamail.JavaMailSenderImpl;
import org.springframework.web.servlet.config.annotation.EnableWebMvc;
import org.springframework.web.servlet.view.InternalResourceViewResolver;

@Configuration
@EnableWebMvc
@ComponentScan(basePackages = "com.lc")


public class MyDispatcherServlet  {
	
	
	
	@Autowired
	 Properties emailProperties;
	
	@Bean
	public InternalResourceViewResolver viewResolver ()
	{
		InternalResourceViewResolver viewResolver = new InternalResourceViewResolver();
		viewResolver.setPrefix("/WEB-INF/Views/");
		viewResolver.setSuffix(".jsp");
		return viewResolver;
		
	}
	
	
	@Bean
	public  JavaMailSender javaMailSender()
	{
		
		JavaMailSenderImpl  javaMailImpl = new JavaMailSenderImpl();
		javaMailImpl.setHost("smtp.gmail.com");
		javaMailImpl.setUsername("toyotacar4473485@gmail.com");
		javaMailImpl.setPassword("asqt hgwg kqry ltkh");
		javaMailImpl.setPort(587);
		
//		Properties mailProperties = new Properties();
//		mailProperties.put("mail.smtp.auth",true);
//		mailProperties.put("mail.smtp.starttls.enable", true);
//		mailProperties.put("mail.smtp.ssl.trust", "smtp.gmail.com");
		javaMailImpl.setJavaMailProperties( emailProperties);
		
		return javaMailImpl;
		
	}
	
	
	@Bean
	public  Properties emailProperties()
	{
		Properties mailProperties = new Properties();
		mailProperties.put("mail.smtp.auth",true);
		mailProperties.put("mail.smtp.starttls.enable", true);
		mailProperties.put("mail.smtp.ssl.trust", "smtp.gmail.com");
		return emailProperties();
	}
	

}
